@using ÜritusedWebApplication.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ÜritusedWebApplication</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/icon.css">
    <link rel="stylesheet" href="~/css/material.indigo-pink.min.css">
    <script defer src="~/js/material.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body class="bg-light">
    <div class="container bg-white shadow-lg mt-4">
        <nav class="nav">
            <ul class="nav col">
                <li class="nav-item py-4 pl-0 mr-5 col-2 justify-content-lg-start m-0">
                    <img src="~/images/logo.svg" />
                </li>
                <li class="nav-item py-4 col-sm-auto text-center @Html.IsActiveBG("Üritused","Index")">
                    <a class="nav-link  text-decoration-none @Html.IsActiveText("Üritused","Index")" asp-controller="Üritused" asp-action="Index"><h7><b>AVALEHT</b></h7></a>
                </li>
                <li class="nav-item py-4 col-sm-auto text-center @Html.IsActiveBG("Üritused","ÜrituseLisamine")">
                    <a class="nav-link text-decoration-none @Html.IsActiveText("Üritused","ÜrituseLisamine")" asp-controller="Üritused" asp-action="ÜrituseLisamine"><h7><b>ÜRITUSE LISAMINE</b></h7></a>
                </li>
                <li class="nav-item mt-1 py-2 col container-fluid text-right pr-0">
                    <img class="align-middle" src="~/images/symbol.svg" />
                </li>
            </ul>
        </nav>
    </div>
    <div class="page-content">
        @RenderBody()
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script>
        $('.ettevote__form').hide();
        $('input[name="osalejaform"]').click(function (e) {
            e.preventDefault();
            $('.osaleja__form').show();
            $('.ettevote__form').hide();
        });

        $('input[name="ettevoteform"]').click(function (e) {
            e.preventDefault();
            $('.osaleja__form').hide();
            $('.ettevote__form').show();
        });
    </script>
</body>
</html>
