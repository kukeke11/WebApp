@model ÜritusedWebApplication.Models.Uritused.UritusedListingModel

<div class="container bg-white mt-4">
    <div class="row p-0 overflow-hidden">
        <div class="col-3 h-50 bg-primary p-0 text-white text-center"><h4>Osavõtjad</h4></div>
        <div class="col-9 p-0" style="background-image: "><img src="~/images/libled.jpg" class="p-0 card-img-overlay img-fluid" /></div>
    </div>
</div>
<div class="container bg-white text-dark">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 text-primary"><h4><b>Osavõtjad</b></h4></div>
        <div class="col-3"></div>
    </div>
    <div class="row py-2">
        <div class="col-3"></div>
        <div class="col-2"><h7><b>Ürituse nimi:</b></h7></div>
        <div class="col-4"><h7>@Model.Uritusenimi</h7></div>
        <div class="col-3"></div>
    </div>
    <div class="row py-2">
        <div class="col-3"></div>
        <div class="col-2"><h7><b>Toimumisaeg:</b></h7></div>
        <div class="col-4"><h7>@Model.Toimumisaeg</h7></div>
        <div class="col-3"></div>
    </div>
    <div class="row py-2">
        <div class="col-3"></div>
        <div class="col-2"><h7><b>Koht:</b></h7></div>
        <div class="col-4"><h7>@Model.Koht</h7></div>
        <div class="col-3"></div>
    </div>
    <div class="row py-2">
        <div class="col-3"></div>
        <div class="col-2"><h7><b>Osavõtjad:</b></h7></div>
        <div class="col-6">
            <div class="table-responsive pt-2">
                <table class="table-borderless pt-1">
                    <tbody>
                        @foreach (var osaleja in Model.Osalejad)
                        {
                            <tr>
                                <td class="col-2 p-0">@osaleja.Eesnimi @osaleja.Perenimi</td>
                                <td class="col-1">@osaleja.Isikukood</td>
                                <td class="col-1 text-right"><a asp-controller="Üritused" asp-action="OsalejaDetail" asp-route-id="@Model.Id" asp-route-IDO="@osaleja.ID">VAATA</a></td>
                                <td class="col-1 text-right"><a asp-controller="Üritused" asp-action="RemoveO" asp-route-id="@Model.Id" asp-route-IDO="@osaleja.ID">KUSTUTA</a></td>
                            </tr>
                        }
                        @foreach (var ettevote in Model.Ettevotted)
                        {
                            <tr>
                                <td class="col-2 p-0">@ettevote.EttevõtteNimi</td>
                                <td class="col-1">@ettevote.EttevõtteRegistrikood</td>
                                <td class="col-1 text-right"><a asp-controller="Üritused" asp-action="EttevoteDetail" asp-route-id="@Model.Id" asp-route-IDO="@ettevote.ID">VAATA</a></td>
                                <td class="col-1 text-right"><a asp-controller="Üritused" asp-action="RemoveE" asp-route-id="@Model.Id" asp-route-IDO="@ettevote.ID">KUSTUTA</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 text-primary"><h4><b>Osavõtjad Lisamine</b></h4></div>
        <div class="col-3"></div>
    </div>
    <div class="row py-2">
        <div class="col-3"></div>
        <div class="col-6 form-group osaleja__form">
            <form method="post" asp-controller="Üritused" asp-action="AddO" asp-route-id="@Model.Id">
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <input type="radio" name="osalejaform" checked="checked"> Osaleja
                    </div>
                    <div class="col-3">
                        <input type="radio" name="ettevoteform"> Ettevõte
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Eesnimi:</b></h7></div>
                    <div class="col-7">
                        <input class="form-control" type="text" name="eesnimi" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Perenimi:</b></h7></div>
                    <div class="col-7">
                        <input class="form-control" type="text" name="perenimi" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Isikukood:</b></h7></div>
                    <div class="col-7">
                        <input class="form-control" type="number" name="isikukood" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Makseviis:</b></h7></div>
                    <div class="col-7">
                        <select class="form-control" id="makseviis" name="makseviis">
                            <option value="1">Sularaha</option>
                            <option value="2">Pangalink</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Lisainfo:</b></h7></div>
                    <div class="col-7">
                        <textarea class="form-control" type="text" name="lisainfo" rows="5" cols="20"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <input class="btn btn-light" type="button" value="Tagasi" onclick="location.href='@Url.Action("Index","Üritused")'"/>
                    </div>
                    <div class="col-auto pl-0">
                        <input class="btn btn-primary" type="submit" value="Salvesta" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-6 ettevote__form">
            <form method="post" asp-controller="Üritused" asp-action="AddE" asp-route-id="@Model.Id">
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <input type="radio" name="osalejaform" required> Osaleja
                    </div>
                    <div class="col-3">
                        <input type="radio" name="ettevoteform" checked="checked" required> Ettevõte
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Ettevotte Nimi:</b></h7></div>
                    <div class="col-7">
                        <input class="form-control" type="text" name="ettevottenimi" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Registrikood:</b></h7></div>
                    <div class="col-7">
                        <input class="form-control" type="number" name="registrikood" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Osalejatearv:</b></h7></div>
                    <div class="col-7">
                        <input class="form-control" type="number" name="osalejatearv" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Makseviis:</b></h7></div>
                    <div class="col-7">
                        <select class="form-control" id="makseviis" name="makseviis">
                            <option value="1">Sularaha</option>
                            <option value="2">Pangalink</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"><h7><b>Lisainfo:</b></h7></div>
                    <div class="col-7">
                        <textarea class="form-control" type="text" name="lisainfo" rows="5" cols="20"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <input  asp-controller="Üritused" asp-action="Index"  class="btn btn-light" type="button" value="Tagasi"/>
                    </div>
                    <div class="col-auto pl-0">
                        <input class="btn btn-primary" type="submit" value="Salvesta" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>